<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSecond">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFBDBD">

        <TextView
            android:id="@+id/tvFrag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Only SMS with this word" />

        <EditText
            android:id="@+id/etFrag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"/>

        <Button
            android:id="@+id/btnRetrieveTextFrag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETRIEVE SMS" />

        <TextView
            android:id="@+id/tvShowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>